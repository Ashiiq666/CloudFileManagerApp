<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <Preference
            app:key="appearance_prefs"
            app:icon="@drawable/ic_palette_24"
            app:title="@string/pref_cat_appearance"
            app:summary="@string/pref_appearance_description"
            android:fragment="com.manager.filemanager.settings.preference.AppearancePreferences"
          />
    <Preference
            app:key="interface_prefs"
            app:icon="@drawable/ic_palette_swatch"
            app:title="@string/pref_interface_title"
            app:summary="@string/pref_interface_description"
            android:fragment="com.manager.filemanager.settings.preference.InterfacePreferences"
          />
    <Preference
            app:key="behavior_prefs"
            app:icon="@drawable/ic_config_24"
            app:title="@string/pref_behavior_title"
            app:summary="@string/pref_behavior_description"
            android:fragment="com.manager.filemanager.settings.preference.BehaviorPreferences"
          />
    <Preference
            app:key="custom_locale"
            app:icon="@drawable/ic_translate"
            app:title="@string/pref_app_language_title"
            tools:summary="Auto" />
</PreferenceScreen>